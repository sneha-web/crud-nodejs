<%- include('./partials/header.ejs') %>


    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Add new Emplyoee</h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name"  />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Id</label>
                        <input type="email" class="form-control" id="email" name="email"  />
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <input type="text" class="form-control" id="role" name="role" />
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

            <!------------------next column------------------>

            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger text-center">List of Emplyoee</h2>
                <%# Show All Data %>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Role</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% var i=1 %>
                            <% data.forEach((item)=>{ %>
                                <tr>
                                    <td><%= i++ %></td>
                                    <td> 
                                        <%= item.name %>
                                    </td>
                                    <td><%= item.email %></td>
                                    <td><%= item.role %></td>
                                    <td>
                                        <form action="/edit/<%= item._id%>" method="get" class="d-inline">
                                            <button type="submit" class="btn"> <i class="fas fa-pen-square text-info"></i></button>
                                        </form>
                                        
                                        <form action="/delete/<%= item._id%>" method="post" class="d-inline">
                                            <button type="submit" class="btn">
                                                <i class="fas fa-trash text-danger"></i>
                                            </button>
                                        </form>
                                        
                                    </td>
                                </tr>
                           <% })%>
                            
                        </tbody>



                    </table>
            </div>

        </div>

    </div>

    <%- include('./partials/footer.ejs') %>