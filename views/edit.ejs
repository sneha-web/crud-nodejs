<%- include('./partials/header.ejs') %>


    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Update Emplyoee</h2>
                <form method="post" action="/update/<%= data._id %>">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>" />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Id</label>
                        <input type="email" class="form-control" id="email" name="email"  value="<%= data.email %>" />
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Name</label>
                        <input type="text" class="form-control" id="role" name="role"  value="<%= data.role %>" />
                    </div>

                    <button type="submit" class="btn btn-warning">Update</button>
                    <button type="submit" class="btn btn-secondary">Back to Home</button>
                </form>
            </div>

           

        </div>

    </div>

    <%- include('./partials/footer.ejs') %>